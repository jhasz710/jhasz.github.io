
/* 
Form Layout Styles 
*/

form#form {
	display: -webkit-flex;
	display: flex;
	-webkit-flex-flow: row wrap;
	flex-flow: row wrap;
}

form#form > fieldset {
	background-color: #FFD8E9;
	border: deeppink dotted;
	border-radius: 5px;
	-webkit-flex: 1 1 300px; 
	flex: 1 1 300px; 
	font-size: 12px;
	padding: 5px;
	margin: 1px;
}


div.formRow {
	display: -webkit-flex;
	display: flex;
	-webkit-flex-flow: row wrap; 
	flex-flow: row wrap;
	margin: 3px 0px;
}

div.formRow > * {
	-webkit-flex: 1 1 150px; 
	flex: 1 1 150px; 
}

/* Order Form Legend Styles */
legend {
	background-color: deeppink;
	border: purple solid; 
	color: white;
	font-size: 16px;
	font-weight: bold;
	padding: 15px;
}


/* Comments / Writing on Cake Styles */
textarea {
	background: #E8F8F5;
	border: teal solid;
	border-radius: 10px;
	color: purple;
	font-family: sans serif;
	margin-top: 10px;
	height: 100px;
	width: 98%;
}


/* Form Button Styles */
div#buttons {
	text-align: center;
	width: 100%;
}

input [type='submit'] {
	font-size: 3.0em;
	padding: 5px;
	margin: 15px;
}


